/*--------------------------------------
 NOTIFICATIONS
--------------------------------------*/

.notification {
	width: 85%;
	display: block;
	position: relative;
	margin-bottom: 15px;
  	padding-right: 60px;
	border-top: 1px solid #ddd;
	border-bottom: 1px solid #ccc;
}

.notification span.notification-link {
	display: block;
  	width: 60px;
	position: absolute;
  	top: 4px;
	right: 10px;
