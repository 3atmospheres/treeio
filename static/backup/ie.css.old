/*--------------------------------------
 POPUP
--------------------------------------*/

.popup-block {
  color: #000;
  background: none repeat scroll 0 0 rgba(82, 82, 82, 0.4);
  position: absolute;
  z-index: 99998;
  width: 500px;
  margin-top: 5px;
  text-align: left;
  font-size: 12px;
  padding: 7px; /* border-size */
  
}

.popup-close, .popup-link-open {
  background: url("/static/modules/popup.gif") no-repeat scroll 0 0 transparent;
  width: 16px;
  height: 16px;
  filter:alpha(opacity=50);
  -moz-opacity:0.5;
  opacity: 0.5;
  display: block;
  float: right;
  z-index: 99999;
  cursor: pointer;
  position: absolute;
}

.popup-close:hover, .popup-link-open:hover {
  opacity: 1;
  filter:alpha(opacity=100);
  -moz-opacity: 1;
}

.popup-close {
  background-position: -18px -1px;
  margin: 0;
  padding: 0;
  left: 480px;
  top: 15px;
}

.popup-link-open {
  background-position: -18px -69px;
  margin: 0;
  padding: 0;
  left: 460px;
  top: 15px;
}

.popup-link {
  border-bottom: 1px dotted #bbb;
}

.popup-title-block {
  padding: 6px 55px 4px 10px;
  border: 1px solid #999;
  border-bottom: 1px solid #ccc;
  background: #f2f2f2;
  cursor: move;
  width: 455px;
}

.popup-title {
  float: left;
  display: inline;
  font-weight: 300;
  font-size: 13pt;
  color: #222;
  margin: 0 0 5px 0;
}

.popup-subtitle { float: left; display: inline; color: #555; font-size: 11px; margin-left: 1em; }

.popup-block-inner {
  background: #fff;
  border: 1px solid #999;
  border-top: 0;
  padding: 10px;
  width: 500px;
}


