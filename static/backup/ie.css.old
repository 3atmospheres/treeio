/*--------------------------------------
 HARDTREE CSS 
--------------------------------------*/

body, html {
    height: 100%;
}

body {
    /* fallback */
    background: #e5e7ea;
    /* Mozilla: */
    background: -moz-linear-gradient(top, #f4f5f6, #e5e7ea 30%) no-repeat #e5e7ea;
    /* Chrome, Safari:*/
    background: -webkit-gradient(linear, left top, left bottom, from(#f4f5f6), to(#e5e7ea)) no-repeat #e5e7ea;
    /* MSIE */
	  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#f4f5f6', EndColorStr='#e5e7ea')";
    color: #333;
    font: 80% 'Helvetica Neue', Helvetica, 'Trebuchet MS', Arial, sans-serif;
    margin: 0;
    padding: 0;
}


/*--------------------------------------
 TOOLBAR
--------------------------------------*/

#search {
	color: #ddd;
	font-size: 90%;
	padding: 5px 0 0 20px;
	text-align: right;
	float: left;
    height: 30px !important;
    margin: 0 0 0 10px;
    padding: 0;
}

.search-input {
    display: inline;
	background: #fff;
    height: 30px !important;
    width: 100px;
	border: 1px solid #aaa;
    padding: 0;
    margin: 0;
}

#id_search_submit {
	padding: 0;
    margin: 0;
    height: 20px;
	background: url('/static/modules/magnifier.gif') no-repeat;
	background-position: 0 2px;
	width: 20px;
	border: 0;
	cursor: pointer;
}

#search_form input {
	padding: 1px 0;
    height: 20px;
}

#search_form input:focus {
	color: #111;
}

#id_search_q {
	margin: 0;
	padding: 1px 2px;
    height: 20px;
	width: 170px;
	color: #777;
}

#toolbar {
	position: fixed;
	bottom: 0;
	width: 100%;
	min-width: 1015px;
	height: 40px;
	border-top: 1px solid #ccc;
	-moz-box-shadow: 0 6px 20px 0 #949DA8;
	box-shadow: 0 6px 20px 0 #949DA8;
	-webkit-box-shadow: 0 6px 20px 0 #949DA8;
	font-size: 90%;
	line-height: 150%;
	background: #bbb; 
	text-shadow: 0 1px 0 #eee; 
	background-image: -moz-linear-gradient(top, #ddd, #bbb); 
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, #ddd),color-stop(1, #bbb));   
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#ddd', EndColorStr='#bbb')";
	color: #555; 
}

#toolbar a:link, #toolbar a:visited {
	color: #333;
	font-weight: bold;
}

.toolbar-links {
	float: left;
	padding: 6px 20px 2px 20px;
}

.toolbar-links a:hover {
	color: #000;
  text-decoration: underline;
}

#user-block {
	padding: 6px 20px 2px 20px;
	text-align: right;
	color: #555;
}

#user-block a:hover {
	color: #000;
  	text-decoration: underline;
}

.trial {
	padding-left: 15px;
	font-weight: bold;
}

.trial a:link, .trial a:visited {
	text-decoration: underline;
	color: #000 !important;
}


/*--------------------------------------
 LAYOUT
--------------------------------------*/

#page { margin: 0 auto; min-width: 1015px; height:100%; }
#page-container { width: 100%; height: 100%; }

#header {
	padding: 0;
	background: #c8d1d8;
}

#container {
	height: 95%;
	border-top: 1px solid #ccc;
	margin: 0;
	position: relative;
	margin-bottom: 30px;
}

#content {
	height: 100%;
	background: #fff;
	margin: 0;
	border-top: 1px solid #fff;
}

.outside-content {
    background: #fff;
    margin: 0;
    border: 1px solid #C9C8C1;
    padding: 1.2em;
}

#footer {
    border-top: 1px solid #fff;
    padding: 4px 0 16px 0;
    width: 100%;
    text-align: center;
	font-size: 95%;
}


/*--------------------------------------
 LOGO
--------------------------------------*/

#logo-block-container {
	float: left;
	height: 65px;
	margin: 0 9px 5px 9px;
}

#logo-block {
	-moz-border-radius: 0 0 10px 10px;
	border-radius: 0 0 10px 10px;
	-webkit-border-radius: 0 0 10px 10px;
	border: 1px solid #bebebe;
	border-top: 0;
	/* fallback */
	background: #fff;
	/* Mozilla: */
	background: -moz-linear-gradient(center top , #fff 70%, #f0f1f1) no-repeat scroll 0 0 #fff;
	/* Chrome, Safari:*/
	background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#f0f1f1)) no-repeat #fff;
	/* MSIE */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fff', EndColorStr='#f0f1f1')";
	-moz-box-shadow: 0px 0px 5px #fff;
  -webkit-box-shadow: 0px 0px 5px #fff;
  box-shadow: 0px 0px 5px #fff;
}

#logo-block:hover {
	background: #fff;
	/* Mozilla: */
	background: -moz-linear-gradient(center top , #fff 70%, #f8fbfb) no-repeat scroll 0 0 #fff;
	/* Chrome, Safari:*/
	background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#f8fbfb)) no-repeat #fff;
	/* MSIE */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fff', EndColorStr='#f8fbfb')";
}

.logo {
	height: 50px;
	padding: 8px 10px;
}

.logo-large {
	height: 80px;
}


/*--------------------------------------
 TOP MENU (MODULES)
--------------------------------------*/

#menu {
	font-size: 9pt;
	background: #dfdfdf;
	/* Mozilla: */
	background: -moz-linear-gradient(top, #e8e8e8, #dfdfdf) no-repeat #dfdfdf;
	/* Chrome, Safari:*/
	background: -webkit-gradient(linear, left top, left bottom, from(#e8e8e8), to(#dfdfdf)) no-repeat #dfdfdf;
	/* MSIE */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#e8e8e8', EndColorStr='#dfdfdf')"; 
	border-top: 1px solid #eee;
}

.menu {
	margin: 0;
	padding: 0 0 2px;
	min-height: 70px;
	float: left;
}

.menu-item, .home {
    display: inline;
    list-style: none;
    margin: 0;
}

.menu-item a, .home a, .menu-item-active a, .home-active a {
	font-size: 8.5pt;
	padding: 5px 5px 0 5px;
	color: #111 !important;
	text-shadow: 0 1px 1px #F7F7F7;
	height: 43px;
    width: 60px;
    text-align: center;
	float: left;
	border: 1px solid #dfdfdf;
	margin: 10px 3px 0 3px;
}

.home a { border: 0; }

.menu-item a.active, .home a.active {
	border-left: 0;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	text-shadow: none;
	background-color: #F2F2F2;
	border: 1px solid #BBBBBB;
	-moz-box-shadow: 0px 0px 5px #fff;
    -webkit-box-shadow: 0px 0px 5px #fff;
    box-shadow: 0px 0px 5px #fff;
}

.menu-item a:hover, .home a:hover {
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	color: #111 !important;
	text-shadow: 0 1px 1px #F7F7F7;
	background: #E4E9EB;
	border: 1px solid #B1B8CE;
}

.menu-item a.active:hover, .home a.active:hover {
    color: #111 !important;
    text-shadow: 0 1px 1px #F7F7F7;
}

#submenu {
    margin: -1.1em -1.1em 0 -1.1em;
    font-size: 14px;
    background: #EBEBE5;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #DCDCD6;
}

.submenu-item {
    list-style: none;
    display: inline;
    margin: 0 0.3em;
}

.submenu-item a:hover {
    border-bottom: 1px dotted #3A362F;
    color: #000;
}

#submenu ul { margin: 0; padding: 2px 20px; }
#submenu ul li { margin: 0; padding: 0; }


/*--------------------------------------
 MENU ICONS
--------------------------------------*/

.hardtree-account, .hardtree-changes, .hardtree-core, .hardtree-documents, .hardtree-events, .hardtree-finance, .hardtree-home, .hardtree-identities, .hardtree-infrastructure, .hardtree-knowledge,  .hardtree-messaging, .hardtree-projects, .hardtree-sales, .hardtree-services, .hardtree-reports, .hardtree-forest {
	background:url("/static/icons/icons.gif") no-repeat;
	display:block;
	height:24px;
	width:24px;
	margin:0 auto;
}

.hardtree-account { background-position: 0 0; }
.hardtree-changes { background-position: 0 -50px; }
.hardtree-core { background-position: 0 -75px; }
.hardtree-documents { background-position: 0 -100px; }
.hardtree-events { background-position: 0 -25px; }
.hardtree-finance { background-position: 0 -125px; }
.hardtree-home { background-position: 0 -150px; }
.hardtree-identities { background-position: 0 -175px; }
.hardtree-infrastructure { background-position: 0 -200px; }
.hardtree-knowledge { background-position: 0 -225px; }
.hardtree-messaging { background-position: 0 -250px; }
.hardtree-projects { background-position: 0 -275px; }
.hardtree-sales { background-position: 0 -300px; }
.hardtree-services { background-position: 0 -325px; }
.hardtree-reports { background-position: 0 -350px; }
.hardtree-forest { background:url("/static/icons/tree.png") no-repeat; }

.login-block {
    font-size: 1.2em;
    width: 350px;
    margin: 50px auto;
    background: #fff;
    border: 1px solid #ccc;
    padding: 1.5em;
    text-align: center;
    -moz-box-shadow: 0px 0px 16px #999;
    -webkit-box-shadow: 0px 0px 16px #999;
    box-shadow: 0px 0px 16px #999;
}

.login-form,.login-form input { font-size: 16pt; }
.login-captcha { font-size: 12pt; margin-bottom: 1em; }
.login-captcha label { display: block; padding-bottom: 0.5em; }
.login-captcha .captcha { vertical-align: bottom; }
.login-captcha #id_captcha_1 { width: 120px; }


/*--------------------------------------
 GLOBALS AND GENERAL CASES
--------------------------------------*/

h1, h2, h3, h4, h5, h6 { color: #222; font-weight: 300; margin: 0; padding: 0; margin: 0.6em 0 0.5em; }

h1 { font-size: 2.1em; }
h2 { font-size: 1.6667em; }
h3 { font-size: 1.33333em; }
h4 { font-size: 1.2em; }

.title {
    display: inline;
    font-weight: 300;
    font-size: 15pt;
    color: #222;
    margin: 0 0 5px 0;
}

.title-block { padding: 10px 15px 5px; border-bottom: 1px solid #ccc; background: #f2f2f2; border-left: 1px solid #fff; }

.subtitle { color: #777; font-size: 12px; margin-left: 0.1em; }

.subtitle-block {
    display: inline;
    margin-left: 0.1em;
    font-size: 11pt;
    color: #555;
}

a:link, a:visited { color: #023868; text-decoration: none; text-shadow: 0 1px 0 #fff; }
a:focus { outline: 1px dotted; }

a:hover, a:active, li a.active {
    color: #333;
    outline: medium none;
    text-decoration: none;
}

a.group-link { color: #260; }
a.author-link { color: #555; }

p { font-size: 1em; line-height: 1.5em; }

img, a img { border: medium none; outline: medium none; }

.form-fields {
    list-style: none;
    padding-left: 1em;
    font-size: 110%;
}

.spaced-list {
    color: #555;
    line-height: 160%;
    list-style: none;
    padding-left: 1.0em;
}

.imp { color: #229 !important; }
.large { font-size: 110%; }
.larger { font-size: 150%; }
.light { color: #333 !important; }
.lighter { color: #555 !important; }
.small { font-size: 90%; }
.smaller { font-size: 80%; }
.heavy { font-weight: 700; }
.detail { color: #888; }
.tip { color: #a63; }
.spaced-h { padding-left: 0.5em; padding-right: 0.5em; }
.spaced-v { padding-top: 0.5em; padding-bottom: 0.5em; }
del { color: #777; }
.hidejs { display: block; }
.showjs { display: none; }
.clear { clear: both; }
.error { color: #a22; }
.left {float: left; margin: 1.5em 1.5em 1.5em 0;padding: 0;}
.right {float: right; margin: 1.5em 0 1.5em 1.5em;}
.hide {display: none;}
.quiet {color: #666;}
.loud {color: #000;}
.first {margin-left: 0; padding-left: 0;}
.last {margin-right: 0; padding-right: 0;}
.top {margin-top: 0; padding-top: 0;}
.bottom {margin-bottom: 0; padding-bottom: 0;}
.yellow {background: #ffc; padding: 5px 10px; border: 1px solid #ccc; text-shadow: 0 1px 0 #fff;}

.highlight {
	background: #eeeeee;
	padding: 5px 10px; 
	border: 1px solid #ccc; 
	text-shadow: 0 1px 1px white;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	background-image: -moz-linear-gradient(top, #fdfdfd, #eeeeee); 
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, #fdfdfd),color-stop(1, #eeeeee));   
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fdfdfd', EndColorStr='#eeeeee')"; 
}

.highlight .light { color: #111 !important; }
.highlight a:link, .highlight a:visited { color: #111; }
.highlight a:hover { text-decoration: underline; }
.highlight-column { width: 45%; margin: 2%; display: inline; }

.box {padding: 1.5em; margin-bottom: 1.5em; background: #e5eCf9;}
hr {background: #ddd; color: #ddd; clear: both; float: none; width: 100%; height: 1px; margin: 0; border: none;}
hr.space {background: #fff; color: #fff; visibility: hidden; margin: 0 0 1.45em}
.clearfix:after, .container:after {content: "\0020"; display: block; height: 0; clear: both; visibility: hidden; overflow: hidden;}
.clearfix, .container {display: block;}


/*--------------------------------------
 FORMS
--------------------------------------*/

form li label {
    display: inline;
    padding: 0.5em 0 0.5em 1em;
    min-width: 100px;
    width: 15%;
    vertical-align: top;
}

form ul { list-style: none; margin: 0; padding: 0; }
form li>ul, form li>ul li { display: inline; }
form li > ul li > label { width: auto !important; }

form .errorlist { color: #a10; list-style: none; }

form .errorlist > li {
    position: relative;
    display: block;
	margin: 1.5em 0 0 16%;
    padding: 3px;
    border-left: 3px solid #a10;
    font-size: 9pt;
    list-style: none;
    color: #a10;
	background: #fefeda;
	width: 300px;
}

form input, form select, form textarea {
    display: inline;
    padding: 0.3em 0.2em;
    color: #000;
    border: 1px solid #CCC;
}

form input:hover, form select:hover, form textarea:hover {
    border: 1px solid #999;
}

form input:focus, form select:focus, form textarea:focus {
    border: 1px solid #000;
}

form input[type="submit"] {
	padding: 0.3em 0.7em;
    color: #333;
	text-shadow: 0 1px 1px white;
	background: #eee; 
	color: #444; 
	cursor: pointer;  
	text-shadow: 0 1px 1px #f6f6f6; 
	text-decoration: none; 
	background-image: -moz-linear-gradient(top, #fdfdfd, #eeeeee); 
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, #fdfdfd),color-stop(1, #eeeeee));   
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fdfdfd', EndColorStr='#eeeeee')";
}

form input[type="submit"]:active {
  	background: #ddd;
    color: #000;
  	border: 1px solid #777;
}

form input[type="submit"]:hover {
    color: #000;
    border: 1px solid #999;
}

input.multicomplete {
    width: 300px;
}

input.multicomplete, input.autocomplete {
    background: url("/static/modules/magnifier.gif") no-repeat scroll right center transparent;
    padding-right: 20px !important;  
}

input.multicomplete:focus, input.autocomplete:focus {
    background: url("/static/modules/magnifier.gif") no-repeat scroll right center #FFFFDD !important;
}


/*--------------------------------------
 CORE STYLES
--------------------------------------*/

.object-trash {
	color: #b21;
	vertical-align: bottom;
	font-size: 14px;
	padding: 2px 0 0 20px;
	background: url("/static/modules/bin.png") center left no-repeat;
	background-position: 0 2px;
}

.object-trash-links {
	padding: 8px 0 2px;
	text-align: right;
}

.permission-users {
	line-height: 160%;
	margin-bottom: 10px;
}

.permission-table { min-width: 0; }

.permission-table th, .permission-table td {
	text-align: center;
	width: 25%;
}

.permission-table td { padding: 5px; }

.permission-table input {
	display: inline;
	margin: 0;
}

.permission-links, .subscription-links, .object-links-links {
	text-align: right;
	padding: 0.5em 0;
}

.subscription-users, .object-links { line-height: 150%; }
.subscription-add { line-height: 160%; }

.pdf-block-link {
    position: absolute;
    top: 12px;
    right: 15px;
    display: block;
    height: 20px;
    line-height: 20px;
    font-size: 8.5pt;
	padding: 0 4px 0 20px;
}

a.pdf-block-link {
    color: #333;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -280px;
	border-width: 1px;
	border-style: solid;
	border-color: #999 #999 #888;
	-moz-box-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
	font-size: 11px;
}

a.pdf-block-link:hover {
    color: #000 !important;
	border-color: #777 #777 #666;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -280px;
	-moz-box-shadow: none;	
}

a.pdf-block-link-active, a.pdf-block-link:active {
    color: #333;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -300px;
	-moz-box-shadow: none;
}

.help-block-link {
    position: absolute;
    top: 12px;
    right: 75px;
    display: block;
    height: 20px;
    line-height: 20px;
    font-size: 8.5pt;
	padding: 0 4px 0 20px;
}

a.help-block-link {
    color: #333;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -240px;
	border-width: 1px;
	border-style: solid;
	border-color: #999 #999 #888;
	-moz-box-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
	font-size: 11px;
}

a.help-block-link:hover {
    color: #000 !important;
	border-color: #777 #777 #666;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -240px;
	-moz-box-shadow: none;	
}

a.help-block-link-active, a.help-block-link:active {
    color: #333;
    background: url("/static/modules/buttons.gif") center left no-repeat;
	background-position: 0 -260px;
	-moz-box-shadow: none;
}


/*--------------------------------------
 COMMON MODULE INTERFACE 
--------------------------------------*/

.module-sidebar {
    min-width: 150px;
    width: 10%;
    font-size: 95%;
    padding: 10px 0 30px 0;
    border-right: 1px solid #ccc;
    background: #f2f2f2;
}

.module-sidebar-right {
    min-width: 160px;
    width: 10%;
    font-size: 95%;
    padding: 10px 6px 4px 4px;
}

.sidebar-slider {
    position: absolute;
    right: 0;
    padding: 0.8em 0.4em 0.8em 0.5em;
    height: 20px;
    line-height: 20px;
    font-weight: 700;
    font-size: 12pt;
    font-family: 'Arial', 'Trebuchet MS', sans-serif;
    color: #8B9A9C;
    background: #E8E8E8;
	border: 1px solid #bbc;
    border-right: 0;
    cursor: pointer;
	-moz-box-shadow: -5px 0px 5px #fff;
	-webkit-box-shadow: -5px 0px 5px #fff;
	box-shadow: -5px 0px 5px #fff;
    z-index: 999;
}

.sidebar-slider:hover { background: #F2F2F2; }
.sidebar-slider:active { background: #FFFFFF; color: #777; }
.sidebar-block { padding: 0.5em 1em; }

a.sidebar-link {
	display: block;
	line-height: 170%;
	padding: 0 1em 0 1.6em;
	color: #383C45;
	text-shadow: 0 1px 0 #eee;
}

a.sidebar-link:hover { background-color: #becbd9; color: #222; }

a.sidebar-link-active {
	/* fallback */
	background: #81A8CE;
	/* Mozilla: */
	background: -moz-linear-gradient(center top, #81A8CE, #5E87B0) no-repeat scroll 0 0 #fff;
	/* Chrome, Safari:*/
	background: -webkit-gradient(linear, left top, left bottom, from(#81A8CE), to(#5E87B0)) no-repeat #fff;
	/* MSIE */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#81A8CE', EndColorStr='#5E87B0')";
	color: #fff;
	text-shadow: 1px 1px 0 #555555;
	font-weight: 700;
}

a.sidebar-link-active:hover {
	color: #fff;
}

.sidebar-header {
	display: block;
	line-height: 170%;
	margin-top: 1em;
	padding: 0.2em 0.5em;
	color: #778;
	background: url("/static/seperator.gif") top repeat-x;
	text-transform: uppercase;
	font-family: Helvetica, 'Trebuchet MS', Arial, sans-serif;
	font-weight: bold;
}

.sidebar-header-first {
    display: block;
    line-height: 170%;
    padding: 0.1em 0.5em;
    color: #777;
}

.sidebar-header-right {
    display: block;
    line-height: 170%;
    padding: 0.1em 0.5em;
    border-top: 1px solid #ccc;
    color: #777;
}

.module-content {
	width: 90%;
	padding: 0 0 50px;
	background: #fff;
}

.module-content-fill { width: 100%; }
.module-content-inner { padding: 10px; width: 88.5%; }
.module-content-home { width: 100%; padding: 0 0 50px; background: #fff; }

div.module-top-menu {
    font-size: 9pt;
    line-height: 150%;
    margin-bottom: 1em;
}

div.module-top-menu-inline {
    display: inline;
    font-size: 9pt;
    line-height: 150%;
    margin-left: 1em;
    margin-top: 2px;
    vertical-align: top;
}

a.top-menu {
    display: inline;
    padding: 1px 5px 1px 18px;
    margin-right: 1em;
}

a.inline-link {
    display: inline;
    padding: 1px 5px 1px 18px;
    margin-right: 1em;
    font-size: 0.9em;
}

a.add-link {
    color: #333;
